<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="custom_dashboard.AddToDepartmentBoard" t-inherit="board.AddToBoard" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('px-3', 'pb-2')]" position="after" >
            <t t-if="this.env.services.user.isAdmin">
                <div class="px-3 pb-2" >
                    <label class="mb-2">Add to Department Dashboard</label>
                    <input type="text" class="o_input mb-3" t-model.trim="state.name" t-on-keydown="onInputKeydownBoard" />
                    <button type="button" class="btn btn-primary" t-on-click="addToDepartmentBoard">Add</button>
                </div>     
            </t>
        </xpath>
    </t>
</templates>
